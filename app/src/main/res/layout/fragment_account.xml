<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.AccountFragment"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="My Profile"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_25sdp"/>

        <LinearLayout
            android:id="@id/lay_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_icon"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/user_11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/my_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/my_edit_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="22dp"
            android:contentDescription="TODO"
            android:background="@drawable/custom_btn_edit"
            android:scaleType="fitCenter"
            android:padding="@dimen/_10sdp"
            tools:ignore="ContentDescription,HardcodedText" />

        <RelativeLayout
            android:id="@+id/lay_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_2"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/custom_bg"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/qr_generate_btn"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:scaleType="fitCenter"
                            android:padding="15dp"
                            android:background="@drawable/custom_btn_qr_code"
                            android:src="@drawable/qr_1"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Generate QR"
                            android:textColor="@color/color_text"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/qr_scan_btn"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:scaleType="fitCenter"
                            android:padding="10dp"
                            android:background="@drawable/custom_btn_qr_code"
                            android:src="@drawable/scan_1"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Scan QR"
                            android:textColor="@color/color_text"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAME"
                    android:alpha="0.5"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:id="@+id/txt_set_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="setName"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MOBILE NUMBER"
                    android:alpha="0.5"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:id="@+id/txt_set_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="setMobile"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:alpha="0.5"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:id="@+id/txt_set_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="setEmail"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMPANY NAME"
                    android:alpha="0.5"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/color_text"/>

                <TextView
                    android:id="@+id/txt_set_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="setCompanyName"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/color_text"/>


            </LinearLayout>


        </RelativeLayout>
        <Button
            android:id="@+id/block_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_3"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="#00000000"
            android:text="Blocked Contacts"
            android:textColor="#F44336"/>

        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/block_btn"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:text="Sign Out"
            android:textColor="#F44336"/>

    </RelativeLayout>


</ScrollView>