<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lay_2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:visibility="visible"
        tools:listitem="@layout/contact_items">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/contactAddLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/recycleView"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtAddContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to a contact"
            android:textColor="@color/blue_2"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtSendSms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAddContact"
            android:text="Send a message"
            android:textColor="@color/blue_2"
            android:textSize="20dp"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/lay_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/dialer_number"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"

                android:layout_toStartOf="@id/button_back"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:textSize="@dimen/_25sdp"

                android:singleLine="true"

                />

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_btn_backspace"
                android:onClick="onBackClick"/>
        </RelativeLayout>



        <GridLayout
            android:id="@+id/dialer_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:background="@color/white"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="1"
                    android:textColor="@color/blue_2"
                    android:textSize="@dimen/_25sdp"
                    android:paddingTop="3dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:src="@drawable/end_call"
                    android:layout_marginBottom="4dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="2"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A B C"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="3"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D E F"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="4"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G H I"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="5"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="J K L"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="6"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M N O"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="7"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P Q R S"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="8"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T U V"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="9"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W X Y Z"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/button_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="*"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="0"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/blue_2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/blue_2"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button_hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_dialer_button"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="#"
                    android:textColor="@color/blue_2"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>


            </LinearLayout>


        </GridLayout>

        <ImageButton
            android:id="@+id/button_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_15sdp"
            android:elevation="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:background="@drawable/custom_call_button"
            android:layout_marginBottom="15dp"
            android:contentDescription="call"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/call_icon_phone" />
    </LinearLayout>

</RelativeLayout>