<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_group"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gr_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/avatar3"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/btnSendRequest"
            android:layout_toEndOf="@+id/gr_profile_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/broadcastCName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="@string/contact_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:singleLine="true"/>


            <TextView
                android:id="@+id/broadcastCCreatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:text="creator name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:singleLine="true" />

        </LinearLayout>


        <TextView
            android:id="@+id/brunreadBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_bg_search_view"
            android:text="10"
            android:padding="@dimen/_3sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnSendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Request"
            android:textSize="17dp"
            android:backgroundTint="@color/btn_green"
            android:scaleType="fitCenter" />

    </RelativeLayout>
</LinearLayout>